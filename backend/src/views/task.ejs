<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Task</title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
        rel="stylesheet"
    >
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Create New Task</h3>
                    </div>
                    <div class="card-body">
                        <!-- Task creation form -->
                        <form action="/tasks/create" method="POST">
                            <!-- Title field -->
                            <div class="mb-3">
                                <label for="inputTitle" class="form-label">Task Title</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    id="inputTitle"
                                    name="title"
                                    placeholder="Enter task title"
                                    value="<%= typeof title !== 'undefined' ? title : '' %>"
                                    required
                                >
                            </div>

                            <!-- Description field -->
                            <div class="mb-3">
                                <label for="inputDescription" class="form-label">Task Description</label>
                                <textarea
                                    class="form-control"
                                    id="inputDescription"
                                    name="description"
                                    placeholder="Enter task description"
                                    rows="4"
                                    required
                                ><%= typeof description !== 'undefined' ? description : '' %></textarea>
                            </div>

                            <!-- Priority field -->
                            <div class="mb-3">
                                <label for="inputPriority" class="form-label">Priority</label>
                                <select
                                    class="form-select"
                                    id="inputPriority"
                                    name="priority"
                                    required
                                >
                                    <option value="low" <%= priority === 'low' ? 'selected' : '' %>>Low</option>
                                    <option value="medium" <%= priority === 'medium' ? 'selected' : '' %>>Medium</option>
                                    <option value="high" <%= priority === 'high' ? 'selected' : '' %>>High</option>
                                </select>
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary w-100">Create Task</button>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <small>Already have a task? <a href="/tasks">View Tasks</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
